{{!-- {{ The section where a number of users answer the poll }} --}}

<div class='container' id='submitPollContainer'>
   <div class='row' id='submitPollRow'>
      <div class = 'col-md-6 col-md-offset-3 bottom-spacer'>
         <div class='text-center'>
            <h1> Submit Your Poll! </h1>
         </div>
         <div class="form-group" id = "submitPollForm" data-uuid = {{pollData.uuid}} data-pollId = {{pollData.id}}>
            <label for="exampleSelect1"> Poll Question: {{pollData.title}}</label>
            {{#isTemplateOne pollData}}
            <select class="form-control" id="pollSelection">
               <option>Yes</option>
               <option>No</option>
            </select>
            {{/isTemplateOne }}

            {{#isTemplateTwo pollData}}
            <select class="form-control" id="pollSelection">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            </select>
            {{/isTemplateTwo  }}

            {{#isTemplateThree pollData}}
            <select class="form-control" id="pollSelection">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            </select>
            {{/isTemplateThree }}

         </div>
         <form>
            <div class="form-group">
               <label for="pollSubmitName"> Enter Your Name </label>
               <input type="name" class="form-control poll-submit-form" id="pollSubmitName" aria-describedby="emailName" placeholder="Enter name">
               <label for="pollSubmitEmail">Enter Email address</label>
               <br>
               <input type="email" class="form-control poll-submit-form" id="pollSubmitEmail" aria-describedby="emailHelp" placeholder="Enter email">
               <small id="emailHelp" class="form-text text-center text-muted">We'll never share your info with anyone else.</small>
            </div>
            <div class='text-center'>
                <input type='button' class='red-button' id='submitPollButton' value='Submit'> </input>
            </div>

         </form>
      </div>
   </div>
</div>
